PedidosPizzaria

CREATE TABLE pedidos(
ID INT PRIMARY KEY auto_increment,
data_pedido Date,
sabor VARCHAR(255),
tamanho VARCHAR(255),
quantidade VARCHAR(255),
nome_completo VARCHAR(255)
CPF VARCHAR(255)
);


